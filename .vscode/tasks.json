{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
							/**
				 			* https://stackoverflow.com/a/59236875/9285308
				 			*/
							"-g",
							"${file}",
							"${fileDirname}/src/*.cpp",
							"${fileDirname}/src/*.h",
							"-o",
							"${fileDirname}/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}
